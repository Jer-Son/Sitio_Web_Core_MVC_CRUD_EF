@model IEnumerable<Sitio_Web_Core_MVC_CRUD_EF.Models.Contrato>

@{
    ViewData["Title"] = "Index";
}

<h1>Contratos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary" >Crear Nuevo Contrato</a>
</p>
<table class="table table-bordered table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameContrato)
            </th>
            <th>Operaciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameContrato)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdContrato" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdContrato" class="btn btn-info" >Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdContrato" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
